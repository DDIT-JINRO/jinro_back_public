<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mpg.mif.pswdchg.service.impl.PasswordChangeMapper">

	<select id="selectPasswordChangeView" resultType="kr.or.ddit.main.service.MemberVO" parameterType="int"> 
		SELECT
			MEM_ID
			, MEM_EMAIL
		FROM
			MEMBER
		WHERE
			MEM_ID = #{memId}
	</select>
	
	<update id="updatePasswordChange" parameterType="map">
		UPDATE
			MEMBER
		SET
			MEM_PASSWORD = #{newPassword}
		WHERE
			MEM_ID = #{memId}
	</update>
		
</mapper>